@page
@model ProFileModel
@{
    ViewData["ActiveManager"] = "ProFile";
    var statusmessage = TempData["StatusMessage"] as string;
}

<div class="container-xxl row mt-5">

    <div class="col-md-6">
        <partial name="_AlertMessage" model="@statusmessage" />
        
        <form method="post" id="fromInformation">

            <h5 class="text-primary">Thông tin</h5>
            <hr class="text-primary" />
            <div class="mb-3">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" asp-for="Input.Company"></label>
                <input class="form-control" asp-for="Input.Company" />
                <span asp-validation-for="Input.Company"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Input.BirthDate"></label>
                <input class="form-control" asp-for="Input.BirthDate" />
                <span asp-validation-for="Input.BirthDate"></span>
            </div>

            <div class="mb-3">
                <label class="form-label" asp-for="Input.Describe"></label>
                <textarea rows="6" class="form-control" asp-for="Input.Describe"></textarea>
                <span asp-validation-for="Input.Describe"></span>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <button form="fromInformation" type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
    <div class="col-md-6">

        <form id="fromImage" asp-page-handler="Image" method="post">
            <h5 class="text-primary">Ảnh</h5>
            <hr class="text-primary" />

            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="mb-3">
                <button form="fromImage" type="submit" class="btn btn-primary">Cập nhật</button>
            </div>

        </form>

    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}