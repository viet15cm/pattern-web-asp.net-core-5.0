@page
@model IndexModel
@{
    var statusMessage = TempData["StatusMessage"] as string;
    ViewData["title"] = "Vai trò";
}
<div class="container d-md-flex justify-content-center">
    <div class="mt-5">
        <div class="alert alert-link p-0"><a href="#" >@ViewData["title"]</a></div>
        <partial name="_AlertMessage" model="@statusMessage" />
        <div>
            <a class="btn btn-primary" asp-area="Identity" asp-page="./Create">+ Tạo mới</a>
            
        </div>
        <hr />
        <table class="table">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Tên</th>
                    <th>
                        Clamis
                    </th>
                    <th scope="col">Tác vụ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.roleClamis)
                {
                    <tr>
                        <th scope="row">@item.Name</th>

                        <td>
                            @foreach (var clami in item.Clamis)
                            {
                                <small>@clami</small>
                            }
                        </td>

                        <td>
                            <a asp-area="Identity" asp-page="./Edit" asp-route-id="@item.Id">Cập nhật</a>@Html.Raw("&emsp;")
                            <a asp-area="Identity" asp-page="./Delete" asp-route-id="@item.Id">Xóa</a>
                        </td>
                        


                    </tr>
                }
                </tbody>
        </table>
    </div>
    

</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}